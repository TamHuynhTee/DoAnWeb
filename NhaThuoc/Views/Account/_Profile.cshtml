@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}
<div class="personal">
    <div class="board">
        <div class="nav-button">
            <button id="info-btn"><i class="glyphicon glyphicon-info-sign"></i> Thông tin cá nhân</button>
            @if (User.IsInRole("user"))
            {
                <button id="payment-btn"><i class="glyphicon glyphicon-usd"></i> Lịch sử mua hàng</button>
            }
            <button id="edit-btn"><i class="glyphicon glyphicon-edit"></i> Chỉnh sửa</button>
            <button id="passChange-btn"><i class="glyphicon glyphicon-lock"></i> Đổi mật khẩu</button>
        </div>
        <div id="main-content">
        </div>
    </div>
</div>

<input hidden value="@User.Identity.Name" id="user"/>

<script>
    var lastbtn = 'info-btn';
    var username = $('#user').val();
    // load personal info when page is loaded
    window.onload = function () {
        $.ajax({
            url: "/Account/getProfile",
            type: "GET",
            data: {
                username: username
            },
            success: function (response) {
                // load partial page
                $('#main-content').html(response);
            }
        })
    }
    
    $('#info-btn').click(function () {
        var current = 'info-btn';
        $('#' + lastbtn).css({ 'background-color': '#edf7ff', 'border-bottom': '2px solid black' });
        $(this).css({ 'background-color': '#feffaf', 'border-bottom': 'none' });
        // you're not in current page
        if (current != lastbtn) {
            $.ajax({
                url: "/Account/getProfile",
                type: "GET",
                data: {
                    username: username
                },
                success: function (response) {
                    // load partial page
                    $('#main-content').html(response);
                },
                error: function (jqXHR, message) {
                    alert(message);
                }
            })
        }
        lastbtn = current;
    })
    // Chưa sửa url
    $('#payment-btn').click(function () {
        var current = 'payment-btn';
        $('#' + lastbtn).css({ 'background-color': '#edf7ff', 'border-bottom': '2px solid black' });
        $(this).css({ 'background-color': '#feffaf', 'border-bottom': 'none' });
        // you're not in current page
        if (current != lastbtn) {
            $.ajax({
                url: "/HoaDon/Purchased",
                type: "GET",
                data: {
                    username: username
                },
                success: function (response) {
                    // load partial page
                    $('#main-content').html(response);
                },
                error: function (jqXHR, message) {
                    alert(message);
                }
            })
        }
        lastbtn = current;
    })

    $('#edit-btn').click(function () {
        var current = 'edit-btn';
        $('#' + lastbtn).css({ 'background-color': '#edf7ff', 'border-bottom': '2px solid black' });
        $(this).css({ 'background-color': '#feffaf', 'border-bottom': 'none' });
        // you're not in current page
        if (current != lastbtn) {
            $.ajax({
                url: "/Account/Edit",
                type: "GET",
                data: {
                    username: username
                },
                success: function (response) {
                    // load partial page
                    $('#main-content').html(response);
                },
                error: function (jqXHR, message) {
                    alert(message);
                }
            })
        }
        lastbtn = current;
    })

    $('#passChange-btn').click(function () {
        var current = 'passChange-btn';
        $('#' + lastbtn).css({ 'background-color': '#edf7ff', 'border-bottom': '2px solid black' });
        $(this).css({ 'background-color': '#feffaf', 'border-bottom': 'none' });

        // you're not in current page
        if (current != lastbtn) {
            $.ajax({
                url: "/Account/changePass",
                type: "GET",
                success: function (response) {
                    // load partial page
                    $('#main-content').html(response);
                },
                error: function (jqXHR, message) {
                    alert(message);
                }
            })
        }
        lastbtn = current;
    })
</script>

<style>
    body {
        background-color: #e4e4e4;
    }
    
    #info-btn {
        border-bottom: none;
        background-color: #feffaf;
    }

    .personal {
        margin-top: 50px;
        width: 100%;
        height: 490px;
        padding: 20px 200px;
    }

    .board {
        width: 100%;
        height: 100%;
    }

    .nav-button {
        width: 100%;
        height: 10%;
        display: flex;
    }
        .nav-button button {
            width: 25%;
            height: 100%;
            border-bottom-left-radius: 0;
            border-bottom-right-radius: 0;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            border: 2px solid black;
            outline: none;
            font-size: 20px;
            font-weight: 600;
            background-color: #edf7ff;
            color: black;
        }

    #main-content {
        width: 100%;
        height: 90%;
        border: 2px solid black;
        border-top: none;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        background-color: #feffaf;
    }
</style>