
@{ 
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout_Account_Actions.cshtml"; 
}


<div class="main">
    <h2>Registration</h2>
    <form action="/Account/Register" method="post">
        @Html.AntiForgeryToken()
        <label class="error">@Html.ValidationMessage("Invalid")</label>
        <label>Username</label>
        <input type="text" name="Username" placeholder="Username" class="form-control" required oninvalid="this.setCustomValidity('Username or Email required')" oninput="setCustomValidity('')" />
        <label>Password</label>
        <input type="password" name="Password" placeholder="Password" class="form-control" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" oninvalid="this.setCustomValidity('Minimum eight characters, at least one uppercase letter, one lowercase letter and one number.')" oninput="setCustomValidity('')" />
        <label>Confirm password</label>
        <input type="password" name="ConfirmPassword" placeholder="Confirm Password" class="form-control" required oninvalid="this.setCustomValidity('Confirm Password required')" oninput="setCustomValidity('')" />
        <label>Email</label>
        <input type="email" name="Email" placeholder="Email" class="form-control" required oninvalid="this.setCustomValidity('Email required')" oninput="setCustomValidity('')" />
        <div class="form-btn">
            <input type="button" value="Login" id="back" class="btn btn-primary" onclick="location.href='/Account/Login'" />
            <input type="submit" value="Confirm" id="submit" class="btn btn-success" />
        </div>
    </form>
</div>

<style>
    .btn{
        padding:0;
    }
</style>