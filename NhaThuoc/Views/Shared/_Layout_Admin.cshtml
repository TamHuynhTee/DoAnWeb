<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        /* Header */
        body {
            font-family: 'Roboto';
            min-height: 550px;
            padding-bottom: 50px;
        }

        .header {
            width: 100%;
            height: 50px;
            top: 0;
            position: fixed;
            background-color: #27ccd4;
            color: black;
            display: flex;
            justify-content: space-between;
            border-bottom: 2px solid black;
            font-weight: bold;
        }

            .header div {
                height: 100%;
                display: flex;
                align-items: center;
            }

                .header div button {
                    background-color: transparent;
                    border: none;
                    outline: none;
                }

        .cart, .login {
            padding: 0 15px;
            width: 40%;
        }

            .cart button:hover,
            .cart button:focus,
            .login button:hover,
            .login button:focus {
                color: red;
            }

        .logo {
            width: 20%;
            justify-content: space-around;
        }

        .login {
            flex-flow: row-reverse;
        }
        }
    </style>
    
</head>
<body>
    <div class="header">
        <div class="cart">
        </div>
        <div class="logo">
            <button onclick="location.href='/Home/Index'"><img src="~/images/icon.png" height="45" width="45" /></button>
        </div>
        <div class="login">

        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
